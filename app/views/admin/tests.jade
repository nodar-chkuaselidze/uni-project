extends logged-layout.jade

block main
  .new-test.hide

  .test-list
    h3 თქვენი ტესტები
    table.table.table-striped.table-hover.table-condensed
      thead
        tr
          th #
          th საგანი
          th კითხვების რაოდენობა
          th მაქსიმალური ქულა
          th დამატების თარიღი
      tbody
        each test, index in tests
          tr
            td #{index + 1}
            td #{test.subject}
            td #{test.questions.length}
            td #{test.maxScore}
            td #{test.createdAt}

